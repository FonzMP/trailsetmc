<% @trails.each do |trail| %>
  <strong>Name: </strong><%= trail.name %>
  <br>
  <strong>Length: </strong><%= trail.length %> miles
  <br>
  <strong>Created by: </strong><%= link_to trail.users.first.username, user_path(trail.users.first) if trail.users.first.username %>
  <br>
  <%= link_to "View #{trail.name}", trail_path(trail) %>
  <br>
  <br>
<% end %>