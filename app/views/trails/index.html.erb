<% @trails.each do |trail| %>
  <strong>Name: </strong><%= trail.name %>
  <br>
  <strong>Length: </strong><%= trail.length %> miles
  <br>
  <strong>Created by: </strong>
  <% if trail.users.blank? %>
    Anonymous
  <% else %>
    <%= link_to trail.users.first.username, user_path(trail.users.first) %>
  <% end %>
  <br>
  <%= link_to "View #{trail.name}", trail_path(trail) %>
  <br>
  <br>
<% end %>